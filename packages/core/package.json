{
  "name": "@jacobknightley/fabric-format",
  "version": "0.0.6",
  "type": "module",
  "description": "A fast, opinionated formatter for Microsoft Fabric notebooks with Spark SQL and Python support",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./sql": {
      "import": "./dist/formatters/sparksql/index.js",
      "types": "./dist/formatters/sparksql/index.d.ts"
    },
    "./python": {
      "import": "./dist/formatters/python/index.js",
      "types": "./dist/formatters/python/index.d.ts"
    },
    "./formatters": {
      "import": "./dist/formatters/index.js",
      "types": "./dist/formatters/index.d.ts"
    }
  },
  "types": "dist/index.d.ts",
  "bin": {
    "fabfmt": "dist/cli.js"
  },
  "c8": {
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/tests/**",
      "dist/formatters/sparksql/generated/**"
    ],
    "all": true
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/tests/**",
    "README.md"
  ],
  "keywords": [
    "fabric",
    "microsoft-fabric",
    "spark",
    "sql",
    "python",
    "pyspark",
    "formatter",
    "notebook",
    "delta-lake",
    "antlr",
    "ruff"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jacobknightley/fabric-format.git"
  },
  "homepage": "https://github.com/jacobknightley/fabric-format#readme",
  "bugs": {
    "url": "https://github.com/jacobknightley/fabric-format/issues"
  },
  "author": "Jacob Knightley",
  "license": "MIT",
  "scripts": {
    "build:antlr": "python .build/build_antlr_js.py",
    "build:ts": "tsc",
    "build:readme": "node -e \"require('fs').copyFileSync('../../README.md', './README.md')\"",
    "build": "npm run build:readme && npm run build:antlr && npm run build:ts",
    "test": "node dist/tests/index.js",
    "test:verbose": "node dist/tests/index.js --verbose",
    "test:coverage": "c8 --reporter=text --reporter=html node dist/tests/index.js",
    "format": "node dist/cli.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "c8": "^10.1.3",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@astral-sh/ruff-wasm-web": "^0.14.10",
    "antlr4": "^4.13.2"
  }
}
