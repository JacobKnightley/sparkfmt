{
  "manifest_version": 3,
  "name": "Fabric Format",
  "version": "0.0.9",
  "description": "Format Python and SparkSQL cells in Microsoft Fabric Notebooks",
  "permissions": ["clipboardWrite"],
  "host_permissions": [
    "https://*.fabric.microsoft.com/*",
    "https://*.powerbi.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Fabric Formatter",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/ruff_wasm_bg.wasm"],
      "matches": ["https://*.fabric.microsoft.com/*", "https://*.powerbi.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*.fabric.microsoft.com/*"],
      "include_globs": ["*synapsenotebooks*"],
      "js": ["dist/content.js"],
      "css": ["dist/content.css"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["https://*.powerbi.com/*"],
      "include_globs": ["*pbides.powerbi.com*"],
      "js": ["dist/content.js"],
      "css": ["dist/content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
