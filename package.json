{
  "name": "fabric-format",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "git config core.hooksPath .githooks || true",
    "build": "npm run build -w @jacobknightley/fabric-format && npm run build -w fabric-format-chromium",
    "build:core": "npm run build -w @jacobknightley/fabric-format",
    "build:chromium": "npm run build -w fabric-format-chromium",
    "test": "npm run test -w @jacobknightley/fabric-format && npm run test -w fabric-format-chromium",
    "test:core": "npm run test -w @jacobknightley/fabric-format",
    "test:chromium": "npm run test -w fabric-format-chromium",
    "test:coverage": "npm run test:coverage -w @jacobknightley/fabric-format",
    "package:chromium": "npm run package -w fabric-format-chromium",
    "release": "node scripts/release.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10"
  }
}
